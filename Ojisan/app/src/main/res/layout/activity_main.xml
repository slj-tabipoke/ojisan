<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="♪おじさん♪"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageRevengeButton"
        android:layout_alignEnd="@+id/imageRevengeButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:contentDescription="Ojisan1"
        android:src="@drawable/start"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="スタート！！"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_alignBottom="@+id/startButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageRevengeButton"
        android:src="@drawable/revenge_btn"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <jp.co.imobile.sdkads.android.ImobileInlineView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        pid="211892"
        mid="184633"
        sid="508532"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/startButton"
        android:layout_alignStart="@+id/startButton" />
</RelativeLayout>
